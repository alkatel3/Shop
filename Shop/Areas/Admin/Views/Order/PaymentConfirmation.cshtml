@model int

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-center text--secondary">Payment Successfully!</h1>
        Order Number is : @Model <br /><br />
        <img src="~/images/lawn_leaf.jpg" width="65%" />
    </div>
    <div class="col-12 text-center" style="color:lightslategray">
        <br />
        Payment has been applied successfully! <br />
        <a asp-area="Admin" asp-controller="Order" asp-action="Details"  asp-route-orderId="@Model" class="btn btn-primary">
            Back to Order Details
            </a>
    </div>
</div>